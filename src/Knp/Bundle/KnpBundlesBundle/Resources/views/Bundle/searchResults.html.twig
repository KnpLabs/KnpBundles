{% extends 'KnpBundlesBundle:Bundle:search.html.twig' %}

{% block title %}{% trans with {'%query%': query} %}search.results.meta.title{% endtrans %}{% endblock %}

{% block description %}{% trans with {'%count%': bundles.nbResults, '%query%': query} %}search.results.meta.description{% endtrans %}{% endblock %}

{% block intro %}
<div id="intro">
    <h1>Searching</h1>
    <h2>Looking for keyword "{{ query }}"</h2>
</div>
{% endblock %}

{% block left %}
<div class="content-box">
    <hgroup>
        <h2>
            {%- if bundles.nbResults == 0 -%}
            No bundles found. Feel free to create your own :)
            {%- else -%}
            Found {{ bundles.nbResults }} bundle{{ bundles.nbResults > 1 ? 's' : '' }}.
            {%- endif -%}
        </h2>
    </hgroup>

    {% if bundles.nbResults > 0 %}
    <section id="search-result-bundles">
        {% include 'KnpBundlesBundle:Bundle:searchBigList.html.twig' with {'bundles': bundles} %}

        {{ pagerfanta(bundles, 'knp_bundles_view') }}
    </section>
    {% endif %}
</div>
{% endblock %}
